{
  "name": "multivault",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "gas": "REPORT_GAS=true hardhat test",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "deploy:baseSepolia": "hardhat run scripts/deploy.ts --network baseSepolia",
    "verify:file": "ts-node scripts/verify.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.3.3",
    "@openzeppelin/contracts": "^5.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1"
  }
}
