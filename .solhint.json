{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.24"],
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "no-empty-blocks": "off",
    "quotes": ["error", "double"],
    "immutable-vars-naming": ["warn", "SNAKE_CASE"],
    "max-line-length": ["warn", 140],
    "custom-errors": ["warn"]
  }
}
